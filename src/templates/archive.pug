-
  function toISODate(date) {
    return (new Date(Date.parse(date))).toLocaleString('en-US', { month: 'short', day: '2-digit', year: 'numeric' });
  }

doctype html
html(lang="en")
  head
    if seo.title
      title=seo.title
    else
      title=""
    if seo.description
      meta(name="description", content=seo.description)
    else
      meta(name="description", content="")
    include head.pug
  body.hidden
    include nav.pug
    main
      article
        div.header
          h2 Archive
        div.archive
            each post in posts
                div
                    time(datetime!=toISODate(post.attributes.date), pubdate="pubdate")=toISODate(post.attributes.date)
                    a(href="/posts/" + post.path) #[h3=post.attributes.title]
    include footer.pug

